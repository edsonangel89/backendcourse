<section class="cart-section">
    <div class="cart-container" style="margin: 5rem auto;">
        {{#if productsList}}
            {{#each productsList}}
                {{#with _doc.id_product}}
                    <div class="product-container">
                        <div class="product-image-container">
                            <img src="" alt="Image not available"/>
                        </div>
                        <div class="product-info-container">
                            <h5>{{_doc.title}}</h5>
                            <p>{{_doc.description}}</p>
                            <p>$ {{_doc.price}}</p>
                        </div>
                        <div class="delete-button-container">
                            <a type="button" href="/cart/{{_doc._id}}"><span style="font-size: 2rem; color: red" class="material-symbols-outlined">delete</span></a>
                        </div>
                    </div>
                    <hr>
                {{/with}}  
            {{/each}}
        {{else}}
            {{#if productsListPremium}}
                {{#each productsListPremium}}
                    {{#with _doc.id_product}}
                        <div class="product-container">
                            <div class="product-image-container">
                                <img src="" alt="Image not available"/>
                            </div>
                            <div class="product-info-container">
                                <h5>{{_doc.title}}</h5>
                                <p>$ {{_doc.price}}</p>
                                <span style="color: red;">Descuento Premium</span>
                                <p style="font-weight:500; color: green">-10 %</p>
                            </div>
                            <div class="delete-button-container">
                                <a type="button" href="/cart/{{_doc._id}}"><span style="font-size: 2rem; color: red" class="material-symbols-outlined">delete</span></a>
                            </div>
                        </div>
                        <hr>
                    {{/with}}  
                {{/each}}
            {{else}}
                <div class="emptycart-container">
                    <h2>Tu carrito esta vacio</h2>
                </div>
            {{/if}}
        {{/if}}
    </div>
</section>
