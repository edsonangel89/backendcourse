<form class="p-3 rounded-1 admin-form" id="data" action="/admin" method="post" name="add_product_form">
    <div class="mb-1">
        <label for="title" class="form-label">Nombre del producto</label>
        <input type="text" id="title" name="title" required class="form-control shadow-sm rounded-1" maxlength="25"/>
    </div>
    <div class="mb-1">
        <label for="description" class="form-label">Descripción</label>
        <textarea type="text" id="description" name="description" required class="form-control shadow-sm rounded-1" maxlength="150"></textarea>
    </div>
    <div class="mb-1">
        <label for="code" class="form-label">Código</label>
        <input type="text" id="code" name="code" required class="form-control shadow-sm rounded-1" maxlength="20"/>
    </div>
    <div class="mb-1">
        <label for="price" class="form-label">Precio</label>
        <input type="number" id="price" name="price" min="0.01" max="999.99" placeholder="0.00" step="0.01" required class="form-control shadow rounded-1"/>
    </div>
    <div class="mb-1">
        <label for="stock" class="form-label">Existencias</label>
        <input type="number" id="stock" name="stock" min="0" max="199" required class="form-control shadow-sm rounded-1"/>
    </div>
    <div class="mb-1">
        <label for="category" class="form-label">Categoría</label>
        <input type="text" id="category" name="category" required class="form-control shadow-sm rounded-1" maxlength="20"/>
    </div><br>
    <div class="d-flex flex-column justify-content-center">
        <button type="submit" class="btn success-btn my-2 container-fluid">Agregar producto</button>
        <a type="button" class="btn my-2 fail-btn container-fluid" href="/">Cancelar</a>
    </div>
</form>