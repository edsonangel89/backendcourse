<form class="p-3 m-2 rounded-1 admin-form" id="data" action="/admin" method="post">
            <div class="mb-1">
                <label for="title" class="form-label">Title</label>
                <input type="text" id="title" name="title" required class="form-control shadow-sm rounded-1"/>
            </div>
            <div class="mb-1">
                <label for="description" class="form-label">Description</label>
                <textarea type="text" id="description" name="description" required class="form-control shadow-sm rounded-1"></textarea>
            </div>
            <div class="mb-1">
                <label for="code" class="form-label">Code</label>
                <input type="text" id="code" name="code" required class="form-control shadow-sm rounded-1"/>
            </div>
            <div class="mb-1">
                <label for="price" class="form-label">Price</label>
                <input type="number" id="price" name="price" min="0.01" placeholder="0.00" step="0.01" required class="form-control shadow rounded-1"/>
            </div>
            <div class="mb-1">
                <label for="stock" class="form-label">Stock</label>
                <input type="number" id="stock" name="stock" min="0" required class="form-control shadow-sm rounded-1"/>
            </div>
            <div class="mb-1">
                <label for="category" class="form-label">Category</label>
                <input type="text" id="category" name="category" required class="form-control shadow-sm rounded-1"/>
            </div><br>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn m-2 container-fluid">Agregar producto</button>
            </div>
        </form>