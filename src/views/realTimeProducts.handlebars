<div class="admin-container">
    <div class="admin-forms">
        <form class="p-3 m-2 rounded-1 admin-form" id="data" action="http://localhost:8080/realtimeproducts" method="post">
            <div class="mb-1">
                <label for="title" class="form-label">Title</label>
                <input type="text" id="title" name="title" required class="form-control shadow-sm rounded-1"/>
            </div>
            <div class="mb-1">
                <label for="description" class="form-label">Description</label>
                <textarea type="text" id="description" name="description" required class="form-control shadow-sm rounded-1"></textarea>
            </div>
            <div class="mb-1">
                <label for="code" class="form-label">Code</label>
                <input type="text" id="code" name="code" required class="form-control shadow-sm rounded-1"/>
            </div>
            <div class="mb-1">
                <label for="price" class="form-label">Price</label>
                <input type="number" id="price" name="price" min="0.01" placeholder="0.00" step="0.01" required class="form-control shadow rounded-1"/>
            </div>
            <div class="mb-1">
                <label for="stock" class="form-label">Stock</label>
                <input type="number" id="stock" name="stock" min="0" required class="form-control shadow-sm rounded-1"/>
            </div>
            <div class="mb-1">
                <label for="category" class="form-label">Category</label>
                <input type="text" id="category" name="category" required class="form-control shadow-sm rounded-1"/>
            </div><br>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn m-2 container-fluid">Agregar producto</button>
            </div>
        </form>
        <form class="p-3 m-2 rounded admin-form" id="delForm" action="http://localhost:8080/realtimeproducts/pid" method="post">
            <div class="mb-1">
                <label for="pid" class="form-label">ID producto</label>
                <input type="text" id="pid" name="pid" required min="1" class="form-control shadow-sm"/><br>
            </div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn m-2 container-fluid">Eliminar producto</button>
            </div>
        </form>
    </div>
    <div class="cards-container p-3 justify-content-around">
        {{#each productsList}}
            <div class="card my-2 rounded-1">
                <img src='' class="card-img-top" alt="Thumbnail">
                <div class="card-body">
                    <div class="row">
                        <h5 class="card-title col">{{_doc.title}}</h5>
                    </div>
                    <div class="row border text-center" style="height: 3.5rem;">
                        <h6 class="col border h-100 d-flex align-items-center justify-content-center">ID</h6>
                        <p class="col border h-100 d-flex align-items-center justify-content-center">{{_doc._id}}</p>
                    </div>
                    <div class="row border" style="height: 3.8rem;">
                        <p class="card-text col border h-100 d-flex align-items-center justify-content-center">{{_doc.description}}</p>
                    </div>
                    <div class="row border text-center" style="height: 3.5rem;">
                        <h6 class="col border h-100 d-flex align-items-center justify-content-center">Code</h6>
                        <p class="col border h-100 d-flex align-items-center justify-content-center">{{_doc.code}}</p>
                    </div>
                    <div class="row border text-center" style="height: 3.5rem;">
                        <h6 class="col border h-100 d-flex align-items-center justify-content-center">Price</h6>
                        <p class="col border h-100 d-flex align-items-center justify-content-center">{{_doc.price}}</p>
                    </div>
                    <div class="row border text-center" style="height: 3.5rem;">
                        <h6 class="col border h-100 d-flex align-items-center justify-content-center">Stock</h6>
                        <p class="col border h-100 d-flex align-items-center justify-content-center">{{_doc.stock}}</p>
                    </div>
                    <div class="row border text-center" style="height: 3.5rem;"> 
                        <h6 class="col border h-100 d-flex align-items-center justify-content-center">Category</h6>
                        <p class="col border h-100 d-flex align-items-center justify-content-center">{{_doc.category}}</p>
                    </div>
                    <div class="row border text-center" style="height: 3.5rem;">
                        <h6 class="col border h-100 d-flex align-items-center justify-content-center">__v</h6>
                        <p class="col border h-100 d-flex align-items-center justify-content-center">{{_doc.__v}}</p>
                    </div>
                </div>
            </div>
        {{/each}}    
    </div>
</div>
