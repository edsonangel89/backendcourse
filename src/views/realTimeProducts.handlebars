<div class="socket">
    <div id="forms">
        <h1>Agrega productos</h1>
        <form action="http://localhost:8080/realtimeproducts" method="post">
            <label for="title">Title</label><br>
            <input type="text" id="title" name="title" required /><br><br>
            <label for="description">Description</label><br>
            <input type="text" id="description" name="description" required/><br><br>
            <label for="code">Code</label><br>
            <input type="text" id="code" name="code" required/><br><br>
            <label for="price">Price</label><br>
            <input type="text" id="price" name="price" required/><br><br>
            <label for="stock">Stock</label><br>
            <input type="text" id="stock" name="stock" required/><br><br>
            <label for="category">Category</label><br>
            <input type="text" id="category" name="category" required/><br><br>
            <label for="thumbnail">Thumbnail</label><br>
            <input type="text" id="thumbnail" name="thumbnail" required/><br><br>
            <input type="submit" value="Agregar producto" />
        </form>
        <h1>Elimina productos</h1>
        <form>
            <label for="pid">ID</label><br><br>
            <input type="text" id="pid" name="pid" required/><br><br>
            <input type="button" value="Eliminar producto" onclick="deleteProduct()"/>
        </form>
        </div>
    <div id="list">
        <table id="table" >
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Description</th>
                <th>Code</th>
                <th>Price</th>
                <th>Status</th>
                <th>Stock</th>
                <th>Category</th>
                <th>Tumbnail</th>
                <th>V</th>
            </tr>
            {{#each products}}
                <tr>
                    {{#each _doc}}
                        <td>{{this}}</td> 
                    {{/each}}
                </tr>
            {{/each}}
            {{#each prods}}
                <tr>
                    <td>{{id}}</td> 
                    <td>{{title}}</td> 
                    <td>{{description}}</td> 
                    <td>{{code}}</td> 
                    <td>{{price}}</td> 
                    <td>{{status}}</td> 
                    <td>{{stock}}</td> 
                    <td>{{category}}</td> 
                    <td>{{thumbnail}}</td> 
                </tr>
            {{/each}}
        </table>
    </div>
</div>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>