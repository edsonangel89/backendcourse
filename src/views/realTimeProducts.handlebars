<div class="socket">
    <div id="forms">
        <h1>Agrega productos</h1>
        <form id="data">
            <label for="title">Title</label><br>
            <input type="text" id="title" name="title" required /><br><br>
            <label for="description">Description</label><br>
            <input type="text" id="description" name="description" required/><br><br>
            <label for="code">Code</label><br>
            <input type="text" id="code" name="code" required/><br><br>
            <label for="price">Price</label><br>
            <input type="number" id="price" name="price" min="0" placeholder="1.0" step="0.01" required /><br><br>
            <label for="stock">Stock</label><br>
            <input type="number" id="stock" name="stock" min="0" required/><br><br>
            <label for="category">Category</label><br>
            <input type="text" id="category" name="category" required/><br><br>
            <label for="thumbnail">Thumbnail</label><br>
            <input type="text" id="thumbnail" name="thumbnail" required/><br><br>
            <input type="submit" value="Agregar producto" />
        </form>
        <h1>Elimina productos</h1>
        <form id="delForm">
            <label for="pid">ID</label><br><br>
            <input type="number" id="pid" name="pid" required min="0"/><br><br>
            <input type="submit" value="Eliminar producto"/>
        </form>
        </div>
    <div id="list">
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Code</th>
                    <th>Price</th>
                    <th>Status</th>
                    <th>Stock</th>
                    <th>Category</th>
                    <th>Tumbnail</th>
                </tr>
            </thead>
            <tbody id="table">
                {{#each products}}
                    <tr>
                        {{#each _doc}}
                            <td>{{this}}</td> 
                        {{/each}}
                    </tr>
                {{/each}}
                {{#each prods}}
                    <tr>
                        <td>{{id}}</td> 
                        <td>{{title}}</td> 
                        <td>{{description}}</td> 
                        <td>{{code}}</td> 
                        <td>{{price}}</td> 
                        <td>{{status}}</td> 
                        <td>{{stock}}</td> 
                        <td>{{category}}</td> 
                        <td>{{thumbnail}}</td> 
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
